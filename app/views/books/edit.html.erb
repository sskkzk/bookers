

<div class="edit">

<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>

<label for="title"><h5>Title</h5></label>
<%= f.text_field :title, id: :title %>

<label for="body"><h5>Body</h5></label>
<%= f.text_area :body, id: :body %><br>

<%= f.submit 'Update Book' %>
  
<% end %>

<div class="link">
<%= link_to "show", book_path(@book.id) %>
|
<%= link_to 'Back', "/books" %>
</div>
</div>